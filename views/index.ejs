<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>Deloitte's URL Shortener
  </title>
</head>

<style>
body{
  background-image: url('/[Downloader.la]-6435c3eed04f9.jpg');
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  height: fit-content;
}
</style>
<body>
  <div class="container mt-5 content" >
    <!-- <video autoplay muted loop>
      <source src="/deloittebackground.webp" type="video/mp4" style="opacity: 0.3;">
    </video> -->
    <h1>Goto/Cloud - Deloitte's URL Shortener</h1>
    <form action="api/url/shorten" method="POST" class="my-4">
      <label for="longUrl" class="sr-only">Destination</label>
      <input required placeholder="Destination" type="url" name="longUrl" id="longUrl" class="form-control col mr-2">
      <div class="form-inline mt-3">
        <label for="shortUrl" class="sr-only">Custom URL</label>
        <input disabled placeholder="DOMAIN" type="url" name="domain" id="domain" class="form-control col mr-2">
        <input required placeholder="Custom URL" type="string" name="shortUrl" id="shortUrl" class="form-control col mr-2"> 
      </div>
      <button class="btn btn-success mt-3" type="submit col-lg-6 col-lg-offset-0">Create</button>
    </form>
    <div class="col-lg-12" style="align-self: center;"> 
    <table class="table table-striped table-responsive mt-5" style="position: center;">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
       </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.longUrl %>"><%= shortUrl.longUrl %></a></td>
            <td><a href="<%= shortUrl.shortUrl %>"><%= shortUrl.shortUrl %></a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
    
  </div>

</body>
</html>