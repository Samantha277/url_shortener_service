<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>Deloitte's URL Shortener
  </title>
</head>
<body>
  <div class="container">
    <h1>Deloitte's URL Shortener</h1>
    <form action="api/url/shorten" method="POST" class="my-4">
      <label for="longUrl" class="sr-only">Destination</label>
      <input required placeholder="Destination" type="url" name="longUrl" id="longUrl" class="form-control col mr-2">
      <div class="form-inline mt-3">
        <label for="shortUrl" class="sr-only">Custom URL</label>
        <input disabled placeholder="DOMAIN" type="url" name="domain" id="domain" class="form-control col mr-2">
        <input required placeholder="Custom URL" type="string" name="shortUrl" id="shortUrl" class="form-control col mr-2"> 
      </div>
      <button class="btn btn-success mt-3" type="submit col-lg-6 col-lg-offset-0">Create</button>
    </form>

    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
       </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.longUrl %>"><%= shortUrl.longUrl %></a></td>
            <td><a href="<%= shortUrl.shortUrl %>"><%= shortUrl.shortUrl %></a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    
  </div>
</body>
</html>